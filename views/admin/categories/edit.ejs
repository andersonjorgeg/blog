<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
  <div class="card mt-3">
    <div class="card-header">
      <h2>Edição de categoria</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/categories/update">
        <input 
          type="text" 
          class="form-control" 
          placeholder="defina o titulo da categoria" 
          name="title"
          value="<%= category.title %>" 
        >
        <input type="hidden" name="id" value="<%= category.id %>">
        <button class="btn btn-success mt-3">Atualizar</button>
      </form>
    </div>
  </div>
</div>
