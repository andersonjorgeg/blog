<%- include('./partials/header.ejs') %>
  <%- include('./partials/homenavbar.ejs') %>
  <div class="container">
    <hr>
    <div class="jumbotron">
      <h1 class="display-4 mt-5">Bem-vindo!</h1>
      <p class="lead">Últimos artigos postados </p>
    </div>
    
    <% articles.forEach(article => { %>
      <div class="card mt-5">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
        </div>
      </div>
    <% }) %>
    <div class="row mt-3 mb-3">
      <div class="col-12">
        <a href="/articles/page/1" class="btn btn-primary right">Próximo >>></a>
      </div>
    </div>
  </div>
<%- include('./partials/footer.ejs') %>
